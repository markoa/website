---
import avatar from "../assets/avatar.jpg";
import Layout from "../layouts/Layout.astro";
import { icon } from "@fortawesome/fontawesome-svg-core";
import {
  faXTwitter,
  faLinkedinIn,
  faGithub,
  faBluesky,
} from "@fortawesome/free-brands-svg-icons";
import { faRss } from "@fortawesome/free-solid-svg-icons";

const icons = {
  twitter: icon(faXTwitter).html,
  linkedin: icon(faLinkedinIn).html,
  bluesky: icon(faBluesky).html,
  github: icon(faGithub).html,
  rss: icon(faRss).html,
};
---

<Layout title="Marko Anastasov">
  <div
    class="bg-gray-200 dark:bg-gray-900 min-h-screen flex items-center justify-center"
  >
    <div
      class="bg-light-base dark:bg-gray-800 shadow-md rounded p-6 w-full max-w-xs"
    >
      <img
        class="w-32 h-32 mx-auto rounded-full border-4 border-gray-200 dark:border-gray-700 mb-4"
        src={avatar.src}
        alt="Profile Picture"
      />
      <h1 class="text-center text-xl font-bold mb-4 dark:text-white">
        Marko Anastasov
      </h1>
      <p class="text-center text-gray-800 dark:text-gray-300 mb-4">
        👋 Tech entrepreneur, open source builder. Cofounder of <a
          href="https://operately.com"
          class="underline">Operately</a
        > and <a href="https://semaphore.io" class="underline">Semaphore</a>.
      </p>
      <p class="text-center text-gray-800 dark:text-gray-300 mb-4">
        🤝 I do business execution, product design, marketing, and engineering.
      </p>
      <p class="text-center text-gray-800 dark:text-gray-300 mb-8">👨‍👩‍👧‍👦 Dad ×2</p>
      <ul class="space-y-4">
        <li>
          <a
            href="/signals"
            class="flex items-center justify-center bg-sky-100 dark:bg-sky-900 text-sky-900 dark:text-sky-100 font-bold py-2 px-4 rounded w-full transition-all hover:bg-sky-600 hover:text-sky-50"
          >
            <span class="w-4 h-4 mr-2">
              <Fragment set:html={icons.rss} />
            </span>
            Signals: Personal blog
          </a>
        </li>
        <li>
          <a
            href="https://blog.operately.com"
            class="flex items-center justify-center bg-sky-100 dark:bg-sky-900 text-sky-900 dark:text-sky-100 font-bold py-2 px-4 rounded w-full transition-all hover:bg-sky-600 hover:text-sky-50"
          >
            <span class="w-4 h-4 mr-2">
              <Fragment set:html={icons.rss} />
            </span>
            Operately Blog
          </a>
        </li>
        <li>
          <a
            href="https://x.com/markoa"
            rel="me"
            class="flex items-center justify-center bg-sky-100 dark:bg-sky-900 text-sky-900 dark:text-sky-100 font-bold py-2 px-4 rounded w-full transition-all hover:bg-sky-600 hover:text-sky-50"
          >
            <span class="w-4 h-4 mr-2">
              <Fragment set:html={icons.twitter} />
            </span>
            @markoa
          </a>
        </li>
        <li>
          <a
            href="https://bsky.app/profile/markoanastasov.bsky.social"
            rel="me"
            class="flex items-center justify-center bg-sky-100 dark:bg-sky-900 text-sky-900 dark:text-sky-100 font-bold py-2 px-4 rounded w-full transition-all hover:bg-sky-600 hover:text-sky-50"
          >
            <span class="w-4 h-4 mr-2">
              <Fragment set:html={icons.bluesky} />
            </span>
            Bluesky
          </a>
        </li>
        <li>
          <a
            href="https://www.linkedin.com/in/markoa/"
            rel="me"
            class="flex items-center justify-center bg-sky-100 dark:bg-sky-900 text-sky-900 dark:text-sky-100 font-bold py-2 px-4 rounded w-full transition-all hover:bg-sky-600 hover:text-sky-50"
          >
            <span class="w-4 h-4 mr-2">
              <Fragment set:html={icons.linkedin} />
            </span>
            LinkedIn
          </a>
        </li>
        <li>
          <a
            href="https://github.com/markoa"
            rel="me"
            class="flex items-center justify-center bg-sky-100 dark:bg-sky-900 text-sky-900 dark:text-sky-100 font-bold py-2 px-4 rounded w-full transition-all hover:bg-sky-600 hover:text-sky-50"
          >
            <span class="w-4 h-4 mr-2">
              <Fragment set:html={icons.github} />
            </span>
            GitHub
          </a>
        </li>
      </ul>
    </div>
  </div>
</Layout>
